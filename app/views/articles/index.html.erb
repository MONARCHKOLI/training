<h1>Articles#index</h1>
<p>Find me in app/views/articles/index.html.erb</p>
 <p><a href="/articles/new">NEW FORM</a></p>
 <center>
    <table border="2px double black" cellpadding = "12px" width="100%" style="text-align:center">
    <tr>
    <th>S.NO.</th>
    <th>TITLE</th>
    <th>BODY</th>
    </tr>
    <tbody>
    <% @articles.each do |item| %>
    <tr>
        <td><a href="/articles/ <%= item.id%>">
        <%= item.id%></a>
        </td>
        <td><%= item.title%></td>
        <td><%= item.body%></td>
    </tr>
    <% end %>
    </tbody>

   
    </table>
</center>

<h1>Articles</h1>

Our blog has <%= Article.public_count %> articles and counting !!

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
